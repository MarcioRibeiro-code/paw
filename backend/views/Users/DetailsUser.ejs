<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/employees/">Employees</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events/">Events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ticket/">Tickets</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/users/showall">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/places/all">Places</a>
          </li>
          <li class="nav-item logout-btn">
            <a class="nav-link btn btn-danger" href="/logout/">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <h1>User Details</h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td><strong>Username:</strong></td>
            <td><%= user.username %></td>
            <td><strong>Email:</strong></td>
            <td><%= user.email %></td>
          </tr>
          <tr>
            <td><strong>Name:</strong></td>
            <td><%= user.firstName %> <%= user.lastName %></td>
            <td><strong>Date of Birth:</strong></td>
            <td><%= user.dateOfBirth.toLocaleDateString() %></td>
          </tr>
          <tr>
            <td><strong>Created at:</strong></td>
            <td colspan="3"><%= user.createdAt.toLocaleString() %></td>
          </tr>
          <tr>
            <td><strong>Balance:</strong></td>
            <td><%= user.balance %></td>
            <td><strong>Points:</strong></td>
            <td><%= user.points %></td>
          </tr>
          <tr>
            <td colspan="4"><strong>Tickets:</strong></td>
          </tr>
          <% if (tickets.length > 0) { %> <% tickets.forEach(function(ticket) {
          %>
          <tr>
            <td><strong>Events Title:</strong></td>
            <td>
              <% if (ticket.events) { %> <%= ticket.events.title %> <% } else {
              %> <% } %>
            </td>
            <td><strong>Local Name:</strong></td>
            <td><%= ticket.locals.localdata.properties.name %></td>
            <td><strong>Ticket Price:</strong></td>
            <td><%= ticket.price %></td>
            <td>
              <a href="/ticket/<%= ticket._id %>/" class="btn btn-primary"
                >More Details</a
              >
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="4">No tickets found.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
