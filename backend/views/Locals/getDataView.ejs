<!DOCTYPE html>
<html>
<head>
  <title>Local Details</title>
  <link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
/></head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/employees/">Employees</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/events/">Events</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/ticket/">Tickets</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/showall">Users</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/places/all">Places</a>
        </li>
        <li class="nav-item logout-btn">
          <a class="nav-link btn btn-danger" href="/logout/">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  

  <div class="container">
    <h1>Local Details</h1>
    <% if (data) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= data.localdata.properties.name %></h5>
          <% if (data.price) { %>
            <p class="card-text">Price: <%= data.price %></p>
          <% } %>
          <ul class="list-group list-group-flush">
            <% Object.entries(data.localdata.properties).forEach(([key, value]) => { %>
              <li class="list-group-item">
                <strong><%= key %>:</strong> <%= value %>
              </li>
            <% }); %>
          </ul>
          <hr>
          <h6 class="card-subtitle mb-2 text-muted">Additional Details:</h6>
          <ul class="list-group list-group-flush">
            <% data.localdata.properties.categories.forEach((category) => { %>
              <li class="list-group-item"><%= category %></li>
            <% }); %>
          </ul>
        </div>
      </div>
    <% } %>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
